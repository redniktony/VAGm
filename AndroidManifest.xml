<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vagm.vagmdroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="9" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.vagm.vagmdroid.activities.MainActivity"
            android:description="@string/bComfort"
            android:label="@string/app_name"
            android:singleUser="false" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vagm.vagmdroid.activities.DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/select_device"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.vagm.vagmdroid.activities.ControllerSelectionActivity"
            android:label="@string/title_activity_controller_selection"
            android:parentActivityName="com.vagm.vagmdroid.activities.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vagm.vagmdroid.activities.activities.MainActivity" />
        </activity>

        <service
            android:name="com.vagm.vagmdroid.service.BluetoothCommandService"
            android:enabled="true" >
        </service>

        <activity
            android:name="com.vagm.vagmdroid.activities.ControllerActivity"
            android:label="@string/title_activity_controller" >
        </activity>
        <activity
            android:name="com.vagm.vagmdroid.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>